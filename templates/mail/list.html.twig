{% extends 'base.html.twig' %}

{% block title %}Hello MailController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controllerName }}! âœ…</h1>
        <h2>{{ systemMessage }}</h2>
        <h3>Found {{ mailIds|length }} emails</h3>

        {% for mailId in mailIds %}
            <li>{{ mailId }}</li>
        {% endfor %}

        <h4>HTML text of message</h4>
        {{  mail.textHtml }}

        <h4>Plain text of message</h4>
        {{  mail.textPlain }}

        {{ dump(mail) }}

        This friendly message is coming from:
        <ul>
            <li>Your controller at <code><a href="{{ '/var/www/localdev/metier/src/Controller/MailController.php'|file_link(0) }}">src/Controller/MailController.php</a></code></li>
            <li>Your template at <code><a href="{{ '/var/www/localdev/metier/templates/mail/list.html.twig'|file_link(0) }}">templates/mail/list.html.twig</a></code></li>
        </ul>
    </div>
{% endblock %}
